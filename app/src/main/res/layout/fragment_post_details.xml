<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".PostDetailsFragment">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff">

        <ImageView
            android:id="@+id/ivPostImage"
            android:layout_width="match_parent"
            android:layout_height="296dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/profile_iv"
            android:paddingBottom="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="20dp"
            app:srcCompat="@android:color/darker_gray" />

        <TextView
            android:id="@+id/tvUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/comment_btn"
            android:layout_marginStart="20dp"
            android:layout_marginTop="2dp"
            android:paddingRight="5dp"
            android:text="TextView"
            android:textColor="#000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTopUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/profile_iv"
            android:layout_toEndOf="@+id/comment_btn"
            android:paddingRight="5dp"
            android:text="TextView"
            android:textColor="#000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvCaption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tvUsername"
            android:layout_toEndOf="@+id/tvUsername"
            android:paddingTop="0dp"
            android:text="TextView"
            android:textColor="#000" />

        <TextView
            android:id="@+id/tvTimestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tvUsername"
            android:layout_below="@+id/tvUsername"
            android:paddingTop="3dp"
            android:text="TextView"
            android:textColor="@android:color/darker_gray"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tvTimestamp2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tvTopUsername"
            android:layout_below="@+id/tvTopUsername"
            android:paddingTop="2dp"
            android:textColor="@android:color/darker_gray"
            android:textSize="10sp" />

        <ImageView
            android:id="@+id/heart_btn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_above="@+id/tvUsername"
            android:layout_alignStart="@+id/tvUsername"
            app:srcCompat="@drawable/ufi_heart_icon" />

        <ImageView
            android:id="@+id/comment_btn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/ivPostImage"
            android:layout_marginStart="50dp"
            app:srcCompat="@drawable/ufi_comment" />

        <ImageView
            android:id="@+id/share_btn"
            android:layout_width="30dp"
            android:layout_height="24dp"
            android:layout_alignStart="@+id/tvTopUsername"
            android:layout_below="@+id/ivPostImage"
            android:paddingLeft="5dp"
            app:srcCompat="@drawable/ufi_new_direct" />

        <ImageView
            android:id="@+id/profile_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/instagram_user_outline_24" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_comments"
            android:layout_width="342dp"
            android:layout_height="128dp"
            android:layout_alignStart="@+id/tvUsername"
            android:layout_below="@+id/tvTimestamp"
            android:layout_marginTop="3dp" />

    </RelativeLayout>
</FrameLayout>